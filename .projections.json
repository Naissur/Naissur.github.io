{
  "_posts/*.md": {
    "type": "post",
    "template": [
      "---",
      "layout: post",
      "title:  {}",
      "date:   <DATE>",
      "comments:   true",
      "categories: articles",
      "---"
    ]
  },
  "_drafts/*.md": {
    "type": "draft",
    "template": [
      "---",
      "layout: draft",
      "title:  {}",
      "date:   <DATE>",
      "comments:   false",
      "categories: drafts",
      "---"
    ]
  }
}
